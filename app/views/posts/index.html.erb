<section class="user-profile center">
<div class="user-card center">
  <img class="user-img" src="<%=@user.photo%>" alt="User profile">
  <a>
    <h2><%=@user.name%></h2>
    <p>Number of posts: <%=@user.posts_counter || 0%></p>
  </a>
</div>
<% @posts.each do |post| %>
<div class="post-card">
  <a href="/users/<%= post.author_id%>/posts/<%= post.id %>"><%= post.title%></a>
  <p><%=post.text%></p>
  <h5>Comments: <%=post.comment_counter || 0 %>, Likes: <%=post.likes_counter || 0 %></h5>
</div>
<div class="comment-container">
  <% Post.get_5_comments(post).includes([:author]).each  do |comment| %>
    <p><%= comment.author.name %>: <%= comment.text %></p>
  <% end %>
</div>
<%end%>
</section>