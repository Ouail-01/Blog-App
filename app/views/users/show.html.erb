<section class="user-profile center">
  <div class="user-card center">
    <img src="<%=@user.photo%>" alt="User profile">
    <a>
      <h2><%=@user.name%></h2>
      <p>Number of posts: <%=@user.posts_counter || 0%></p>
    </a>
  </div>
  <div class="user-bio">
    <h2>bio</h2>
    <p><%=@user.bio%></p>
  </div>
  <%@user.latest_three_posts.each do |post| %>
  <div class="post-card">
    <h2><%=post.title%></h2>
    <p><%=post.text%></p>
    <h5>Comments: <%=post.comment_counter || 0 %>, Likes: <%=post.likes_counter || 0 %></h5>
  </div>
  <%end%>
  <button value="see-all" class="all-posts"><%= link_to "See all posts", "/users/#{@user.id}/posts"%></button>
</section>